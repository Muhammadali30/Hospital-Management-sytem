<Page x:Class="Final_Project.Forms.SPLASH.InnerPages.LoadingPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Final_Project.Forms.SPLASH.InnerPages"
      mc:Ignorable="d" 
      Background="white"
      d:DesignHeight="250" d:DesignWidth="300"
      Title="LoadingPage">

    <Grid>
        <TextBlock Text="Loading Resources..." FontSize="17" FontWeight="SemiBold"
                   Margin="50 80 0 15"/>
        <ProgressBar Value="0" Height="5" Width="220" BorderBrush="#1E929B" Background="White" Margin="-5 10 0 0" IsIndeterminate="True" Foreground="#1E929B"
                     />
    </Grid>
</Page>
