<Page x:Class="Final_Project.Forms.OPD.SidebarPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Final_Project.Forms.OPD"
      mc:Ignorable="d" 
      d:DesignHeight="300" d:DesignWidth="190"
      Background="#1E929B"
      Title="SidebarPage">

    <StackPanel>
        <Button   Style="{StaticResource editbutton}" Content="DashBoard" FontSize="16" FontWeight="SemiBold"   Margin="10" Click="DashBoardPageButton" />
        <Button   Style="{StaticResource editbutton}" Content="Patient" FontSize="16" FontWeight="SemiBold"   Margin="10" Click="PatientListButton"/>
        <Button   Style="{StaticResource editbutton}" Content="Doctor" FontSize="16" FontWeight="SemiBold"   Margin="10" Click="DoctorListButton"/>
    </StackPanel>
</Page>
