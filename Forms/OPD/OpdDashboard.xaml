    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
            <!--<ColumnDefinition Width="250"/>-->
        </Grid.ColumnDefinitions>
        <ScrollViewer ScrollViewer.VerticalScrollBarVisibility="Hidden">
            <Grid Grid.Column="0">
            <Grid.RowDefinitions>
                <RowDefinition Height="250"/>
                <RowDefinition Height="40"/>
                <RowDefinition Height="*"/>
                
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="220"/>
                <ColumnDefinition Width="150" MaxWidth="150"/>
                <ColumnDefinition Width="2.5*"/>
                <ColumnDefinition Width="2.5*"/>
            </Grid.ColumnDefinitions>

            <Border Grid.Column="0" Grid.Row="0"  Grid.ColumnSpan="2" MaxWidth="500" Padding="20" Margin="10" CornerRadius="20" Background="White">
                <Border.Effect>
                    <DropShadowEffect  Color="Gray" Direction="280" BlurRadius="20" ShadowDepth="5" Opacity="0.6"/>
                </Border.Effect>
                <StackPanel Orientation="Vertical">
                    <TextBlock Text="Patient Activity" TextAlignment="Left" FontSize="14" FontWeight="Bold"/>
                    <StackPanel Orientation="Horizontal">
                        <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                            <lvc:PieChart Name="pieChart" LegendLocation="Bottom" Height="170" Width="190">
                                <lvc:PieChart.Series>
                                    <lvc:PieSeries Title="Male"  Fill="#1E929B" Values="100"/>
                                    <lvc:PieSeries Title="Female" Fill="#FAA26E" Values="200"/>
                                    <lvc:PieSeries Title="Children" Fill="LightBlue" Values="200"/>
                                </lvc:PieChart.Series>
                            </lvc:PieChart>
                        </StackPanel>
                        <Line X1="0" Y1="0" X2="0" Y2="170" Margin="20 0 20 0" Stroke="Gray" StrokeThickness="2"/>

                        <StackPanel Orientation="Vertical" HorizontalAlignment="Center">


                            <StackPanel>
                                <StackPanel Margin="0 50 0 0"  Orientation="Vertical">
                                    <!--<Icon:PackIconMaterial Kind="NewspaperVariantOutline" Foreground="#1E929B" Margin="0 6 10 0" Height="40" Width="40"/>-->
                                    <TextBlock Text="167" FontSize="36" Margin="0" FontWeight="Bold"/>
                                    <TextBlock Text="Total Patients" Foreground="Gray"  FontSize="10" />

                                </StackPanel>
                            </StackPanel>
                        </StackPanel>
                    </StackPanel>

                </StackPanel>
            </Border>

            <Border Grid.Row="0" Grid.Column="2" Margin="10" Padding="10" CornerRadius="10" Background="White">
                <Border.Effect>
                    <DropShadowEffect  Color="Gray" Direction="280" BlurRadius="20" ShadowDepth="5" Opacity="0.6"/>
                </Border.Effect>
                <StackPanel Orientation="Vertical" HorizontalAlignment="Center">
                    <StackPanel>
                        <StackPanel Margin="10" Orientation="Horizontal">
                            <TextBlock Text="35" FontSize="36" FontWeight="Bold"/>
                            <TextBlock Text="Patients" Foreground="Gray" Margin="0 25 0 0" FontSize="10" FontWeight="Bold"/>

                        </StackPanel>
                            <Line X1="0" Y1="0" X2="300" Y2="0" Margin="20 0 20 0" Stroke="Gray" StrokeThickness="2"/>
                    </StackPanel>
                    <StackPanel Orientation="Horizontal">
                    <Icon:PackIconMaterial Kind="Calendar" Foreground="#1E929B" Margin="10 6 10 0" Height="20" Width="20"/>
                    <TextBlock Text="Appointments" FontSize="12" Margin="0 8 0 0" FontWeight="SemiBold"/>
                        
                    </StackPanel>

            
                </StackPanel>
            </Border>
            <Border Grid.Row="0" Grid.Column="3" Margin="10" Padding="10" CornerRadius="10" Background="White">
                <Border.Effect>
                    <DropShadowEffect  Color="Gray" Direction="280" BlurRadius="20" ShadowDepth="5" Opacity="0.6"/>
                </Border.Effect>
                <StackPanel Orientation="Vertical" HorizontalAlignment="Center">
                  
                        <TextBlock Text="Registered Patients" FontSize="14" FontWeight="Bold"/>
                   
                    <StackPanel>
                        <StackPanel Margin="10" Orientation="Horizontal">
                            <Icon:PackIconMaterial Kind="NewspaperVariantOutline" Foreground="#1E929B" Margin="0 6 10 0" Height="40" Width="40"/>
                            <TextBlock Text="167" FontSize="36" Margin="0" FontWeight="Bold"/>
                            </StackPanel>
                    </StackPanel>
                </StackPanel>
            </Border>
