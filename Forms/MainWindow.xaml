                </StackPanel>
            </Border>

            <StackPanel Grid.Row="0" Grid.Column="1" Margin="0 0 0 0" HorizontalAlignment="Right" Orientation="Horizontal">
                <Button Style="{DynamicResource notifybutton}"  Margin="5 -9 0 0"  Click="MinimizeButton">
                    <Icon:PackIconMaterial Kind="WindowMinimize"/>
                </Button>
                <Button Style="{DynamicResource notifybutton}" Margin="5 -9 0 0" Click="MaximizeButton">
                    <Icon:PackIconMaterial Kind="WindowMaximize"/>
                </Button>
                <Button Style="{DynamicResource notifybutton}" Margin="5 -9 0 0"  Click="CloseButton" >
                    <Icon:PackIconMaterial Kind="close" />
                </Button>
            </StackPanel>

