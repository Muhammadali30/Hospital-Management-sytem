<Page x:Class="Final_Project.Forms.Pharmacy.PharmacySidebar"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Final_Project.Forms.Pharmacy"
      mc:Ignorable="d" 
            d:DesignHeight="300" d:DesignWidth="190"
Background="#1E929B"
      Title="PharmacySidebar">

    <StackPanel>
        <Button   Style="{StaticResource editbutton}" Content="Medcine" Margin="5" FontSize="16" FontWeight="SemiBold" Click="OpenMedListPage"/>
        <Button   Style="{StaticResource editbutton}" Content="Detail"  Margin="5" FontSize="16" FontWeight="SemiBold" Click="OpenMedDetailPage"/>
        <Button   Style="{StaticResource editbutton}" Content="Return"  Margin="5" FontSize="16" FontWeight="SemiBold" Click="OpenMedReturnPage"/>
        <Button   Style="{StaticResource editbutton}" Content="Supplier" Margin="5" FontSize="16" FontWeight="SemiBold" Click="OpenSupplierPage"/>
        <Button   Style="{StaticResource editbutton}" Content="Content" Margin="5" FontSize="16" FontWeight="SemiBold" Click="OpenOrderPage"/>
    </StackPanel>
</Page>
