<Page x:Class="Final_Project.Forms.Pharmacy.InnerPages.PurchasePage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Final_Project.Forms.Pharmacy.InnerPages"
      mc:Ignorable="d" 
      Background="White"
      d:DesignHeight="850" d:DesignWidth="320"
      Title="PurchasePage">

    <Grid>
        <ScrollViewer VerticalScrollBarVisibility="Hidden">
            <StackPanel>
                <StackPanel Grid.Row="1" Orientation="Vertical">
                    <StackPanel Margin="10" Orientation="Vertical" >
                        <TextBlock Text="Batch No" Margin="5" FontWeight="Bold" />
                        <TextBox x:Name="batchno" Style="{DynamicResource textboxstyle}" Tag="Batch No" Width="300" IsEnabled="False"/>
                    </StackPanel>
                    <StackPanel Margin="10" Orientation="Vertical" Grid.Column="1" Grid.Row="0">
                        <TextBlock Text="Voucher No" Margin="5" FontWeight="Bold" />
                        <TextBox x:Name="k" Style="{DynamicResource textboxstyle}" Tag="Voucher No" Width="300"/>
                    </StackPanel>
                    <StackPanel Orientation="Horizontal">
                        <StackPanel Margin="10" Orientation="Vertical" Grid.Column="0" Grid.Row="2">
                            <TextBlock Text="Supplier" Margin="5" FontWeight="Bold" />
                            <Border CornerRadius="10" Margin="0 0 20 0" Width="240" Background="white" BorderBrush="#1E929B" BorderThickness="2">
                                <ComboBox Background="White"  BorderBrush="White"
                                     BorderThickness="0"
                                     Width="230" IsEditable="True"
                                     IsTextSearchEnabled="True"
                                     StaysOpenOnEdit="True"
                                     SelectedIndex="0"
                                     Margin="2"
                                     x:Name="medicinecombobox"
                                 />
                            </Border>
                        </StackPanel>
                        <StackPanel Margin="10" Orientation="Vertical" Grid.Column="0" Grid.Row="2">
                            <Button Style="{DynamicResource editbutton}" Content="ADD" ToolTip="Add medcine alternatives" Margin="-20 25 0 0" />
                        </StackPanel>
                    </StackPanel>
                    <StackPanel Margin="10" Orientation="Vertical" Grid.Column="2" Grid.Row="1">
                        <TextBlock Text="Dosage Form" Margin="5" FontWeight="Bold" />
                        <ComboBox x:Name="meddosageform" Style="{DynamicResource CustomComboBoxStyle}" StaysOpenOnEdit="True"  Grid.Column="0" Margin="0 0 10 0"  Width="290" Height="30" SelectedIndex="0">
                            <ComboBoxItem IsEnabled="False" Content="Tablet"/>
                            <ComboBoxItem Content="Syrup"/>
                            <ComboBoxItem Content="Tablet"/>
                            <ComboBoxItem Content="Capsule"/>
                            <ComboBoxItem Content="Suspension"/>
                            <ComboBoxItem Content="Solution"/>
                            <ComboBoxItem Content="Injection"/>
                            <ComboBoxItem Content="Cream"/>
                            <ComboBoxItem Content="Ointment"/>
                            <ComboBoxItem Content="Gel"/>
                            <ComboBoxItem Content="Patch"/>
                            <ComboBoxItem Content="Inhaler"/>
                            <ComboBoxItem Content="Suppository"/>
                        </ComboBox>
                    </StackPanel>
                    <StackPanel Orientation="Horizontal">
                        <StackPanel Margin="10" Orientation="Vertical" Grid.Column="0" Grid.Row="2">
                            <TextBlock Text="Medicine" Margin="5" FontWeight="Bold" />
                            <Border CornerRadius="10" Margin="0 0 20 0" Width="240" Background="white" BorderBrush="#1E929B" BorderThickness="2">
                                <ComboBox Background="White"  BorderBrush="White"
                                       BorderThickness="0"
                                       Width="230" IsEditable="True"
                                       IsTextSearchEnabled="True"
                                       StaysOpenOnEdit="True"
                                       SelectedIndex="0"
                                       Margin="2"
                                       x:Name="medicinecovmbobox"
                                   />
                            </Border>
                        </StackPanel>
                        <StackPanel Margin="10" Orientation="Vertical" Grid.Column="0" Grid.Row="2">
                            <Button Style="{DynamicResource editbutton}" Content="ADD" ToolTip="Add medcine alternatives" Margin="-20 25 0 0" />
                        </StackPanel>
                    </StackPanel>
                    <!--<StackPanel Margin="10" Orientation="Vertical" Grid.Column="2" Grid.Row="1">
