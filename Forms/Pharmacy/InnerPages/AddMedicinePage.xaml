                        <StackPanel Orientation="Horizontal">
                            <StackPanel Margin="10" Orientation="Vertical" Grid.Column="0" Grid.Row="2">
                                <TextBlock Text="Add Med to Alternatives" Margin="5" FontWeight="Bold" />
                                <Border CornerRadius="10" Margin="0 0 20 0" Width="240" Background="white" BorderBrush="#1E929B" BorderThickness="2">
                                    <ComboBox Background="White"  BorderBrush="White"
                                        BorderThickness="0"
                                        Width="230" IsEditable="True"
                                        IsTextSearchEnabled="True"
                                        StaysOpenOnEdit="True"
                                        SelectedIndex="0"
                                        Margin="2"
                                        x:Name="medicinecombobox"
                                    />
                                </Border>
                            </StackPanel>
                            <StackPanel Margin="10" Orientation="Vertical" Grid.Column="0" Grid.Row="2">
                                <Button Style="{DynamicResource editbutton}" Content="ADD" ToolTip="Add medcine alternatives" Margin="-20 25 0 0" Click="Button_Click_1"/>
                            </StackPanel>
                        </StackPanel>
                    <StackPanel x:Name="alternativemedicinelist">
                    </StackPanel>
                    </StackPanel>
                    <StackPanel Grid.Row="7" Orientation="Horizontal">
                        <StackPanel Margin="10" Orientation="Vertical" Grid.Column="0" Grid.Row="2">
                            <TextBlock Text="Instuctions" Margin="5" FontWeight="Bold" />
                            <TextBox x:Name="medinstructions" Style="{DynamicResource textboxstyle}" Tag="Details....." Width="300" Height="60"/>
                        </StackPanel>
                    </StackPanel>
                    <Button Grid.Row="8" Style="{StaticResource editbutton}" Margin="30" Width="100" HorizontalAlignment="Right" Click="Button_Click">
                        <StackPanel Orientation="Horizontal">
                            <TextBlock Text="Submit" FontSize="14"/>
                        </StackPanel>
                    </Button>
            </StackPanel>
        </ScrollViewer>
    </Grid>
