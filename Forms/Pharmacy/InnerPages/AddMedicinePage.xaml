                        <!--<StackPanel Margin="10" Orientation="Vertical" Grid.Column="0" Grid.Row="1">
                            <TextBlock Text="Unit(e.g,Strips,Boxes)" Margin="5" FontWeight="Bold" />
                            <TextBox Style="{DynamicResource textboxstyle}" Tag="Value" Width="300"/>
                        </StackPanel>-->
                    <StackPanel Margin="10" Orientation="Vertical" Grid.Column="1" Grid.Row="1">
                        <TextBlock Text="Unit" Margin="5" FontWeight="Bold" />
                        <TextBox x:Name="medunit" Style="{DynamicResource textboxstyle}" Tag="e.g ml,mg" Width="300"/>
                    </StackPanel>
                    <StackPanel Margin="10" Orientation="Vertical" Grid.Column="1" Grid.Row="1">
                        <TextBlock Text="Unit Value" Margin="5" FontWeight="Bold" />
                        <TextBox x:Name="medunitvalue" Style="{DynamicResource textboxstyle}" Tag="e.g 600" Width="300"/>
                    </StackPanel>
