<Page x:Class="Final_Project.Forms.Pharmacy.InnerPages.AddCategoryPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Final_Project.Forms.Pharmacy.InnerPages"
      mc:Ignorable="d" 
      Background="white"
      d:DesignHeight="200" d:DesignWidth="320"
      Title="AddCategoryPage">

    <Grid>


            <StackPanel>
            <StackPanel Grid.Row="1" Orientation="Vertical">
                <StackPanel Margin="10" Orientation="Vertical" >
                    <TextBlock Text="Category Name" Margin="5" FontWeight="Bold" />
                    <TextBox x:Name="Category" Style="{DynamicResource textboxstyle}" Tag="Medicine name" Width="300"/>
                </StackPanel>
            </StackPanel>
            <Button Grid.Row="8" Style="{StaticResource editbutton}" Margin="30" Width="100" HorizontalAlignment="Right">
                    <StackPanel Orientation="Horizontal">
                        <TextBlock Text="Submit" FontSize="14"/>
                    </StackPanel>
                </Button>
            </StackPanel>
    </Grid>
</Page>

